{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "gcc build active file",
            "type": "shell",
            "command": "/usr/bin/gcc",
            "args": [
                "-Wall",
                "-std=c++11",
                "${file}",
                "$-o",
                "${fileDirname}.o"
            ]
        }
    ]
}